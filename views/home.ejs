<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>movies4U</title>
    <!-- font awesome cdn  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- css -->
    <link rel="stylesheet" href="../assets/css/style.css" />
   
</head>

<body class="bg-dark text-light">

    <header class="bg-black">
        <nav class="p-3 bg-black fixed-top m-auto">
            <div class="container d-flex justify-content-between">
                <a class="text-decoration-none fs-1 text-white fw-medium" href="#">movie<span class="text-danger">4U</span></a>
                <button class="btn btn-danger fs-5 " >
                    Add Movie
                </button>
            </div>
        </nav>
    </header>

    <section class="main">
        <div class="container d-flex justify-content-center align-item-center" style="height: 75vh;"></div>
    </section>

    <!-- Movie Info Cards -->
    <section class="data-cards m-5">
        <div class="container">
            <div class="card-wrapper">
                <% data.map((data) => { %>
                <div class="card mb-5">
                    <!-- Movie Image -->
                    <div class="card-front">
                        <img src="<%= data.image %>" alt="image" />
                    </div>

                    <!-- Movie Details (overlay) -->
                    <div class="card-back">
                        <h3 class="pb-3"> <%= data.title %></h3>
                        <p>Rating: <%= data.rating %></p>
                        <p>Quality: <%= data.quality %></p>
                        <p>Description: <%= data.description %></p>
                        <div class="controls">
                            <a href="/deleteData/<%= data._id %>" class="mx-3 delete"><i
                                    class="fa-solid fa-trash"></i></a>
                            <a href="/editData/<%= data._id %>" class="edit"><i
                                    class="fa-solid fa-pen-to-square"></i></a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Modal for Adding New Movie -->
    <div class="modal fade" id="movieFormModal" tabindex="-1" aria-labelledby="movieFormModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title" id="movieFormModalLabel">
                        Add a New Movie
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="movieForm" action="/insertData" method="post" enctype="application/x-www-form-urlencoded">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title:</label>
                            <input type="text" id="title" name="title"
                                class="form-control bg-dark text-light border-danger" required />
                        </div>
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating:</label>
                            <select name="rating" id="" class="form-select fs-5 form-control bg-dark text-light border-danger">
                                <option selected disabled>Choose Your Rating</option>
                                <option value="⭐">⭐</option>
                                <option value="⭐⭐">⭐⭐</option>
                                <option value="⭐⭐⭐">⭐⭐⭐</option>
                                <option value="⭐⭐⭐⭐">⭐⭐⭐⭐</option>
                                <option value="⭐⭐⭐⭐⭐">⭐⭐⭐⭐⭐</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="quality" class="form-label">Quality:</label>
                            <input type="text" id="quality" name="quality"
                                class="form-control bg-dark text-light border-danger" required />
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description:</label>
                            <textarea id="description" name="description"
                                class="form-control bg-dark text-light border-danger" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Image URL:</label>
                            <input type="text" id="image" name="image"
                                class="form-control bg-dark text-light border-danger" required />
                        </div>
                        <button type="submit" class="btn btn-danger w-100">
                            Add Movie
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom Scripts -->
    <script src="../assets/js/slider.js"></script>
    <script src="../assets/js/main.js"></script>
</body>

</html>
